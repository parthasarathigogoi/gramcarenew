# GramCare Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 5000)
PORT=5000

# Environment (development, production, test)
NODE_ENV=development

# =============================================================================
# GOOGLE CLOUD TRANSLATION API
# =============================================================================

# Your Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Path to your Google Cloud service account JSON file
# Download from Google Cloud Console > IAM & Admin > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# =============================================================================
# TWILIO CONFIGURATION (WhatsApp Integration)
# =============================================================================

# Twilio Account SID (found in Twilio Console)
TWILIO_ACCOUNT_SID=your-twilio-account-sid

# Twilio Auth Token (found in Twilio Console)
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Your Twilio phone number (format: +1234567890)
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Your Twilio WhatsApp number (format: whatsapp:+1234567890)
TWILIO_WHATSAPP_NUMBER=whatsapp:+your-whatsapp-number

# Webhook verification token for WhatsApp
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================

# MongoDB connection string (for production use)
# Local: mongodb://localhost:27017/gramcare
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/gramcare
MONGODB_URI=mongodb://localhost:27017/gramcare

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path (optional)
LOG_FILE=./logs/gramcare.log

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret for authentication (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key

# Session secret for express-session
SESSION_SECRET=your-session-secret

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# Government Health API endpoints (if available)
HEALTH_API_BASE_URL=https://api.health.gov.in
HEALTH_API_KEY=your-health-api-key

# Weather API for location-based alerts (optional)
WEATHER_API_KEY=your-weather-api-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_VOICE_INPUT=true
ENABLE_ANALYTICS=true
ENABLE_WHATSAPP=true
ENABLE_TRANSLATION_CACHE=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Translation cache TTL (in seconds)
TRANSLATION_CACHE_TTL=3600

# Maximum message length
MAX_MESSAGE_LENGTH=1000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode
DEBUG=gramcare:*

# Hot reload for development
NODEMON_WATCH=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# SSL/TLS configuration (for production)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Cluster mode (number of worker processes)
CLUSTER_WORKERS=auto

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Application monitoring (New Relic, DataDog, etc.)
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-key

# Error tracking (Sentry)
SENTRY_DSN=your-sentry-dsn

# Google Analytics (for web interface)
GA_TRACKING_ID=your-ga-tracking-id

# =============================================================================
# BACKUP & STORAGE
# =============================================================================

# File storage (local, s3, gcs)
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3 configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=gramcare-storage

# Google Cloud Storage (if using GCS)
GCS_BUCKET_NAME=gramcare-storage

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@gramcare.health

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook URLs for external integrations
WEBHOOK_HEALTH_ALERTS=https://your-domain.com/webhooks/health-alerts
WEBHOOK_USER_FEEDBACK=https://your-domain.com/webhooks/feedback

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default language
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,hi,bn,te,ta,mr,gu,kn,ml,pa,or,as

# Translation confidence threshold (0-1)
TRANSLATION_CONFIDENCE_THRESHOLD=0.8

# =============================================================================
# HEALTH DATA CONFIGURATION
# =============================================================================

# Health data update frequency (in hours)
HEALTH_DATA_UPDATE_INTERVAL=24

# Alert severity levels
ALERT_SEVERITY_LEVELS=low,medium,high,critical

# Maximum alert radius (in kilometers)
MAX_ALERT_RADIUS=50

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database URI
TEST_MONGODB_URI=mongodb://localhost:27017/gramcare-test

# Test API keys (use sandbox/test keys)
TEST_TWILIO_ACCOUNT_SID=test-sid
TEST_TWILIO_AUTH_TOKEN=test-token

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with real credentials to version control
# 2. Use strong, unique passwords and API keys
# 3. Regularly rotate your API keys and secrets
# 4. Use environment-specific configurations for different deployments
# 5. Consider using a secrets management service for production

# For more information, see: https://github.com/your-username/gramcare/docs/setup.md