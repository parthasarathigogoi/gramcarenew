# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/gramcare
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/gramcare

# Google Translate API
GOOGLE_TRANSLATE_KEY=your_google_translate_api_key_here
# Get your API key from: https://console.cloud.google.com/apis/credentials

# AI Services Configuration
# OpenAI API (GPT-3.5/GPT-4)
OPENAI_API_KEY=your_openai_api_key_here
# Get your API key from: https://platform.openai.com/api-keys

# Google Gemini API (Free tier available)
GEMINI_API_KEY=your_gemini_api_key_here
# Get your API key from: https://makersuite.google.com/app/apikey

# AI Configuration
PREFERRED_AI_SERVICE=auto
# Options: 'openai', 'gemini', 'auto' (auto tries gemini first, then openai)
AI_ENABLED=true
AI_FALLBACK_TO_FAQ=true

# Twilio WhatsApp Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
# Get credentials from: https://console.twilio.com/

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Optional: Analytics and Monitoring
ANALYTICS_ENABLED=true
MONITORING_ENABLED=false

# Optional: Email Configuration (for alerts)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Optional: SMS Configuration (for alerts)
SMS_PROVIDER=twilio
SMS_FROM_NUMBER=+1234567890

# Security
ENCRYPTION_KEY=your_encryption_key_here
HASH_SALT_ROUNDS=12

# Feature Flags
ENABLE_WHATSAPP=true
ENABLE_TRANSLATION=true
ENABLE_ANALYTICS=true
ENABLE_ALERTS=true

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Health Check
HEALTH_CHECK_INTERVAL=30000

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30